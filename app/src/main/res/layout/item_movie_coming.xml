<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <include
            android:id="@+id/tv_first_show_time"
            layout="@layout/view_first_show_time"
            />


    <RelativeLayout
            android:layout_below="@+id/tv_first_show_time"
            android:paddingTop="18dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/item_movie_coming_name"
                android:text="你的名字。"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_movie_coming_pic_all"
                android:layout_marginStart="16dp"
                />
        <TextView
                android:id="@+id/item_movie_coming_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_movie_coming_pic_all"
                android:layout_below="@+id/item_movie_coming_name"
                android:text="2000"
                android:textSize="16sp"
                android:textColor="@color/material_amber_500"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_movie_coming_wish"
                android:text="人想看"
                android:layout_alignBaseline="@+id/item_movie_coming_wish"
                android:textSize="14sp"
                android:id="@+id/textView"
                />
        <TextView
                android:id="@+id/item_movie_coming_scm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_movie_coming_pic_all"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/item_movie_coming_wish"
                android:layout_marginTop="6dp"
                android:text="寻君千里行，心系君之名"
                />
        <TextView
                android:id="@+id/item_movie_coming_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_movie_coming_pic_all"
                android:layout_below="@id/item_movie_coming_scm"
                android:layout_marginTop="6dp"
                android:text="主演:上白石萌音,神木隆之介,长泽雅美"
                android:maxLines="1"
                android:maxEms="12"
                android:ellipsize="end"
                android:layout_marginStart="16dp"
                />
        <FrameLayout
                android:id="@+id/item_movie_coming_pic_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                >

            <ImageView
                    android:id="@+id/item_movie_coming_pic"
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    />
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_movie_play"
                    />

        </FrameLayout>

        <View
                android:id="@+id/view_coming1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_movie_coming_pic_all"
                android:layout_marginTop="12dp"
                android:layout_alignStart="@+id/item_movie_coming_name"
                android:background="#eeeeee"
                />

        <RelativeLayout
                android:id="@+id/item_movie_coming_headline"
                android:layout_below="@+id/view_coming1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_movie_coming_name"
                >

            <TextView
                    android:id="@+id/item_movie_coming_headline_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="圣地巡礼：美哭的每一帧都有现实取景地"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
            <View
                    android:id="@+id/view_coming2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/item_movie_coming_headline_title0"
                    android:background="#eeeeee"
                    />

            <TextView
                    android:id="@+id/item_movie_coming_headline_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="导演新海诚：梦想做宇航员的动画导演"
                    android:textSize="14sp"
                    android:layout_below="@+id/view_coming2"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_movie_coming_headline"
                android:background="#eeeeee"
                />
        <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@null"
                android:id="@+id/item_movie_coming_buy"
                android:text="购买"
                android:textSize="12sp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentEnd="true"
                />

    </RelativeLayout>
</RelativeLayout>
