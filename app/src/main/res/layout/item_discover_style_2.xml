<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

    <ImageView
            android:id="@+id/item_pic"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@color/material_amber_200"
            />

    <TextView
            android:layout_toEndOf="@+id/item_pic"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" 《你的名字。》2.8亿夺冠，助力大盘超8亿"
            />

    <TextView
            android:id="@+id/item_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:layout_toEndOf="@+id/item_pic"
            android:layout_marginStart="8dp"
            android:text="票房聚焦"
            android:layout_alignBottom="@+id/item_pic"
            android:layout_toStartOf="@+id/item_saw"
            />

    <TextView
            android:id="@+id/item_saw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:drawableStart="@drawable/ic_saw"
            android:text="36225"
            android:layout_alignTop="@+id/item_nick"
            android:layout_alignBottom="@+id/item_nick"
            android:layout_toStartOf="@+id/item_commit"
            android:layout_marginEnd="4dp"
            android:drawablePadding="2dp"
            />

    <TextView
            android:id="@+id/item_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_commit"
            android:textSize="@dimen/sp_12"
            android:text="162"
            android:layout_alignTop="@+id/item_nick"
            android:layout_alignBottom="@+id/item_nick"
            android:layout_alignParentEnd="true"
            android:drawablePadding="2dp"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/item_pic"
            />


</RelativeLayout>