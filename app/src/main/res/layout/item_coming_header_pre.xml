<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:padding="15dp"
            >

        <ImageView
                android:id="@+id/item_coming_header_pre_img"
                android:layout_width="180dp"
                android:layout_height="90dp"
                />

        <View
                android:background="@drawable/coming_header_pre_gradient"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="180dp"
                android:layout_height="35dp"
                />

        <LinearLayout
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

            <TextView
                    android:id="@+id/item_coming_header_pre_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:text="你的名字。"
                    />

            <TextView
                    android:id="@+id/item_coming_header_pre_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="终极预告片 12月2日一起看吧！"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_movie_play"
                android:layout_gravity="end|bottom"
                android:layout_margin="4dp"
                />
    </FrameLayout>

</LinearLayout>