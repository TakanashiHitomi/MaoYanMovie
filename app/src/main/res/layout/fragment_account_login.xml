<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

        <TextView
                android:layout_marginEnd="16dp"
                android:textColor="#000000"
                android:id="@+id/text_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="18sp"
                />

        <EditText
                android:padding="8dp"
                android:id="@+id/et_account"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/text_account"
                android:layout_alignBaseline="@+id/text_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机/邮箱/用户名"
                android:textSize="18sp"
                />

        <View
                android:layout_below="@+id/text_account"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

        <TextView
                android:layout_marginEnd="16dp"
                android:textColor="#000000"
                android:id="@+id/text_pwd"
                android:layout_below="@+id/text_account"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="18sp"
                />

        <EditText
                android:id="@+id/et_pwd"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/text_pwd"
                android:layout_alignBaseline="@+id/text_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textSize="18sp"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_pwd"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/text_pwd"
                android:src="@drawable/pwd_cannot_see"
                />

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />

    <Button
            android:id="@+id/btn_login"
            android:text="登陆"
            android:textColor="@color/white"
            android:background="@drawable/login_bg"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            />

</LinearLayout>