<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

    <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="“星战CP”空降广州，影迷疯狂合影“姜甄配”"
            android:layout_marginBottom="8dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:id="@+id/item_pics"
            >

        <ImageView
                android:id="@+id/item_pic1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@color/material_red_200"
                />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                >

            <ImageView
                    android:id="@+id/item_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/material_amber_200"
                    />

            <ImageView
                    android:id="@+id/item_pic3"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/material_blue_grey_200"
                    />
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/item_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/item_pics"
            android:layout_marginTop="8dp"
            android:text="票房聚焦"
            android:layout_toStartOf="@+id/item_saw"
            />

    <TextView
            android:id="@+id/item_saw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:drawableStart="@drawable/ic_saw"
            android:drawablePadding="2dp"
            android:text="36225"
            android:layout_alignTop="@+id/item_nick"
            android:layout_alignBottom="@+id/item_nick"
            android:layout_toStartOf="@+id/item_commit"
            android:layout_marginEnd="4dp"
            />

    <TextView
            android:id="@+id/item_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_commit"
            android:drawablePadding="2dp"
            android:textSize="@dimen/sp_12"
            android:text="162"
            android:layout_alignTop="@+id/item_nick"
            android:layout_alignBottom="@+id/item_nick"
            android:layout_alignParentEnd="true"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/item_nick"
            />

</RelativeLayout>