<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTranslucentStatusTheme" parent="AppTheme.NoActionBar">
        <!-- Status Bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation Bar -->
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTranslucentNavigationTheme" parent="AppTheme.NoActionBar">
        <!-- Status Bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation Bar -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyMeTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="MyMeTextView2">
        <item name="android:drawableRight">@drawable/triangle</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
